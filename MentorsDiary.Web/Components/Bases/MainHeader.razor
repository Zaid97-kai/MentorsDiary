@using MentorsDiary.Application.Bases.Enums

<GridRow Gutter="8" Justify="start" Style="margin-top: 1.5rem; margin-bottom: 1.5rem">
    <GridCol Span="5" Flex=@("230px")>
        <img class="w-100" src="img/image 3.png" alt="" aria-current="page" @onclick="NavigateToHome">
    </GridCol>
    <GridCol Flex=@("auto")>

    </GridCol>
    <GridCol Span="6" Style="text-align: right; align-items: flex-end">
        @if (CurrentUser != null)
        {
            <button class="btn-outline-primary" @onclick="NavigateToLoginWindow">ВЫЙТИ</button>
        }
        else
        {
            <button class="btn-outline-primary" @onclick="NavigateToLoginWindow">ВОЙТИ</button>
        }
        <svg xmlns="http://www.w3.org/2000/svg" enable-background="new 0 0 24 24" height="24px" vievbox="0 0 24 24" width="24px" fill="#000000">
            <g><rect fill="none" height="24" width="24" /></g>
            <g><path d="M11,7L9.6,8.4l2.6,2.6H2v2h10.2l-2.6,2.6L11,17l5-5L11,7z M20,19h-8v2h8c1.1,0,2-0.9,2-2V5c0-1.1-0.9-2-2-2h-8v2h8V19z" /></g>
        </svg>
        @if (CurrentUser != null)
        {
            @switch (CurrentUser.Role)
            {
                case EnumRoles.Administrator:
                    <p class="mt-2">
                        <a href="/profile" class="nav-link" style="text-decoration: none;">
                            <Tag Color="@PresetColor.Gold.ToString()">@CurrentUser.Name</Tag>
                        </a>
                    </p>
                    break;
                case EnumRoles.DeputyDirector:
                    <p class="mt-2">
                        <a href="/profile" class="nav-link" style="text-decoration: none;">
                            <Tag Color="@PresetColor.Purple.ToString()">@CurrentUser.Name</Tag>
                        </a>
                    </p>
                    break;
                case EnumRoles.Curator:
                    <p class="mt-2">
                        <a href="/profile" class="nav-link" style="text-decoration: none;">
                            <Tag Color="@PresetColor.Red.ToString()">@CurrentUser.Name</Tag>
                        </a>
                    </p>
                    break;
            }
        }
    </GridCol>
</GridRow>

@if (IsVisibleEnterModalWindow)
{
    <Login Visible="IsVisibleEnterModalWindow" />
}

